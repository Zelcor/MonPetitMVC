{% import '/imports/elements.html' as elements %}
<div class="container">
    <h2>Recherche selon critères</h2>
    <form action="index.php?c=GestionClient&a=recupereDesClients" method="post">
        <div class="form-group">
            {{ elements.list("titreCli", titres, "titre", "titres") }}
            {{ elements.list("villeCli", villes, "ville", "villes") }}
            {{ elements.list("cpCli", cps, "cp", "cps") }}
        </div>
        {% if criteres %}
            <h4> Critères :
                {% for critere in criteres %}
                    {{ critere }}
                {% endfor %}
            </h4>
            {% if lesClients %}
                {{ include('/blocks/arrayClients.html.twig') }}
            {% else %}
        <div class="alert alert-danger">
                <h5> Aucun client trouvé pour ces critères</h5>
        </div>
            {% endif %}
        {% endif %}
    </form>
</div>