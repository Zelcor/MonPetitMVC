<h2>Résultat recherche :</h2>
{% if clients %}
<table class="table table-responsive">
    <tr>
        <th>Num</th>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Adresse</th>
        <th>Complement</th>
        <th>cp</th>
        <th>Ville</th>
        <th>Tel</th>
        <th></th>
    </tr>
    {% for unClient in clients %}
        <tr>
            <td> {{ unClient.getId() }} </td>
            <td> {{ unClient.getNomCli() }} </td>
            <td> {{ unClient.getPrenomCli() }} </td>
            <td> {{ unClient.getAdresseRue1Cli() }} </td>
            {% if unClient.getAdresseRue2Cli() %}
                <td> {{ unClient.getAdresseRue2Cli() }}</td>
            {% else %}
                <td></td>
            {% endif %}
            <td> {{ unClient.getCpCli() }} </td>
            <td> {{ unClient.getVilleCli() }} </td>
            <td> {{ unClient.getTelCli() }} </td>
            <td><a class="btn btn-info" href="http://monpetitmvc/?c=gestionClient&a=commandesUnClient&id={{ unClient.getId() }}"> voir commandes </a></td>
        </tr>
    {% endfor %}
</table>
    <p>Nombre de clients trouvés : {{ clients|length }} </p>
{% else %}
    <div class="alert alert-danger">
        <h5> Aucun client trouvé pour ces critères</h5>
    </div>
{% endif %}
